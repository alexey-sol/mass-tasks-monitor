{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonJS",
        "lib": ["esnext", "dom"],
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "components/*": ["src/components/*"],
            "pages/*": ["src/pages/*"],
            "styles": ["src/styles/*"],
            "types/*": ["src/types/*"],
            "utils/*": ["src/utils/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
